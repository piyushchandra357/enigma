<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- VISION BOARD KANBAN VIEW - Pinterest Style -->
    <!-- ============================================ -->
    <record id="view_personal_vision_kanban" model="ir.ui.view">
        <field name="name">personal.vision.kanban</field>
        <field name="model">personal.vision</field>
        <field name="arch" type="xml">
            <kanban default_order="sequence, id desc" class="o_kanban_small_column o_kanban_mobile" records_draggable="1">
                <field name="id"/>
                <field name="title"/>
                <field name="description"/>
                <field name="image_256"/>
                <field name="category"/>
                <field name="is_achieved"/>
                <field name="target_date"/>
                <field name="color"/>
                <field name="sequence"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_achieved.raw_value ? 'border-success' : ''}" style="padding: 0; overflow: hidden;">

                            <!-- Image Section -->
                            <div t-if="record.image_256.raw_value" class="o_kanban_image_wrapper" style="min-height: 150px; background-color: #f8f9fa;">
                                <img t-att-src="kanban_image('personal.vision', 'image_256', record.id.raw_value)" class="o_kanban_image w-100" style="object-fit: cover; max-height: 200px;" alt="Vision"/>
                            </div>
                            <div t-else="" class="d-flex align-items-center justify-content-center" style="min-height: 100px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <span class="fs-1 text-white">ðŸŒŸ</span>
                            </div>

                            <!-- Content Section -->
                            <div class="p-3">
                                <!-- Achievement Badge -->
                                <div t-if="record.is_achieved.raw_value" class="mb-2">
                                    <span class="badge bg-success">ðŸŽ‰ Achieved!</span>
                                </div>

                                <!-- Title -->
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title fs-6">
                                        <field name="title"/>
                                    </strong>
                                </div>

                                <!-- Description -->
                                <div t-if="record.description.raw_value" class="text-muted mt-1" style="font-size: 0.85em; max-height: 60px; overflow: hidden;">
                                    <field name="description"/>
                                </div>

                                <!-- Footer -->
                                <div class="mt-2 d-flex justify-content-between align-items-center">
                                    <span t-if="record.category.raw_value" class="badge bg-light text-dark">
                                        <field name="category"/>
                                    </span>
                                    <small t-if="record.target_date.raw_value" class="text-muted">
                                        ðŸŽ¯                                        <field name="target_date"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISION BOARD LIST VIEW -->
    <!-- ============================================ -->
    <record id="view_personal_vision_list" model="ir.ui.view">
        <field name="name">personal.vision.list</field>
        <field name="model">personal.vision</field>
        <field name="arch" type="xml">
            <list default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="title"/>
                <field name="category"/>
                <field name="target_date"/>
                <field name="is_achieved" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISION BOARD FORM VIEW -->
    <!-- ============================================ -->
    <record id="view_personal_vision_form" model="ir.ui.view">
        <field name="name">personal.vision.form</field>
        <field name="model">personal.vision</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Achieved! ðŸŽ‰" bg_color="text-bg-success" invisible="not is_achieved"/>

                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_256'}"/>

                    <div class="oe_title">
                        <h1>
                            <field name="title" placeholder="Your vision..."/>
                        </h1>
                    </div>

                    <group col="1">
                        <group string="ðŸŽ¯ Vision Details">
                            <field name="category" placeholder="e.g., Career, Health, Travel"/>
                            <field name="target_date"/>
                            <field name="is_achieved"/>
                            <field name="sequence"/>
                        </group>

                        <group string="ðŸ“ Description">
                            <field name="description" nolabel="1" placeholder="Describe your vision in detail..."/>
                        </group>

                        <group string="ðŸ“Ž Attachments">
                            <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISION BOARD SEARCH VIEW -->
    <!-- ============================================ -->
    <record id="view_personal_vision_search" model="ir.ui.view">
        <field name="name">personal.vision.search</field>
        <field name="model">personal.vision</field>
        <field name="arch" type="xml">
            <search>
                <field name="title"/>
                <field name="category"/>
                <filter name="filter_achieved" string="ðŸŽ‰ Achieved" domain="[('is_achieved','=',True)]"/>
                <filter name="filter_in_progress" string="ðŸš€ In Progress" domain="[('is_achieved','=',False)]"/>
                <separator/>
                <filter name="filter_has_target" string="Has Target Date" domain="[('target_date','!=',False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_category" string="Category" context="{'group_by':'category'}"/>
                    <filter name="group_achieved" string="Status" context="{'group_by':'is_achieved'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- VISION BOARD ACTION -->
    <!-- ============================================ -->
    <record id="action_personal_vision" model="ir.actions.act_window">
        <field name="name">Vision Board</field>
        <field name="res_model">personal.vision</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_filter_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first vision!
            </p>
            <p>
                Visualize your dreams, set goals, and manifest your future ðŸŒŸ
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_personal_vision_action" name="My Vision Board" parent="menu_personal_vision" action="action_personal_vision" sequence="1" />
</odoo>
